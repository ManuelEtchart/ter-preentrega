<p class="titulo">Productos</p>
<div id="productos">
    {{#if productos.msg}}
        <p class="aviso">No hay productos</p>
    {{else}}
        {{#if productos}}
            <div>
                <table>
                    <tr>
                        <th>Nombre</th>
                        <th>Descripci√≥n</th>
                        <th>Stock</th>
                        <th>Precio</th>
                        <th>Foto</th>
                    </tr>
                {{#each productos}}
                    <tr>
                        <td>{{this.nombre}}</td>
                        <td>{{this.descripcion}}</td>
                        <td>{{this.stock}}uni</td>
                        <td>${{this.precio}}</td>
                        <td><img src={{this.foto}}></td>
                        <td><button class="boton"><a href="/api/productos/{{this._id}}">Detalles</a></button></td>
                    </tr>
                {{/each}}
                </table>       
            </div>
        {{/if}}  
    {{/if}}
    <button class="boton"><a href="/api/productos/form">Ingresar Productos</a></button>
    <button class="boton"><a href="/api/carrito">Ir a Carritos</a></button>
</div>

    
    
    